{# Resources/views/layout.html.twig #}
{% extends "@Bootstrap/layout3.html.twig" %}

{% block bootstrapStylesheets %}
    {{ parent() }}
    {% include "@JQueryDataTables/include/styles.html.twig" %}
    <style type="text/css">
        .content {
            margin: 70px 0 0;
        }
    </style>
    {% block jQueryDataTablesStylesheets %}
    {% endblock %}
{% endblock %}

{% block bootstrapTitle %}webeweb/jqeury-detatabales-bundle{% endblock %}

{% block bootstrapContainer %}
    <nav class="navbar navbar-inverse navbar-fixed-top">
        <div class="container-fluid">
            <div class="navbar-header">
                <button class="navbar-toggle collapsed" type="button" data-target="#bs-edmbundle-navbar-collapse" data-toggle="collapse" aria-expanded="false">
                    <span class="sr-only">{{ "label.toggle_navigation"|trans({}, "BootstrapBundle") }}</span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <a class="navbar-brand" href="#">jQuery DataTables bundle</a>
            </div>
        </div>
    </nav>
    <section class="content">
        <div class="container-fluid">
            {% if (0 < app.session.flashbag.peekAll()|length) %}
                <div class="row clearfix">
                    <div class="{{ bootstrapGrid({"lg": 12, "recopy": true}) }}">
                        {% include "@Bootstrap/layout/flashbag.html.twig" %}
                    </div>
                </div>
            {% endif %}
            {% block jQueryDataTablesContent %}
            {% endblock %}
        </div>
    </section>
{% endblock %}

{% block bootstrapJavaScripts %}
    {{ parent() }}
    {% include "@JQueryDataTables/layout/javascripts.html.twig" %}
    {% block jQueryDataTablesJavacripts %}
    {% endblock %}
{% endblock %}
